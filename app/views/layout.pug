doctype html
html
    head
        block PAGE_TITLE

        //- Meta First
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(charset='UTF-8')
        block META

        //- Load Fonts
        -
            fontList = ['Ubuntu:300,400,700', 
                        'Amatica+SC', 
                        'Dancing+Script', 
                        'Open+Sans+Condensed:300,700&subset=latin,greek']

        each font in fontList
            link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=" + font)

        //- Load stylesheets
        link(rel='stylesheet', type='text/css', href='../css/main.css')
        block LOAD_CSS

    body
        .container
            header#page-header
                div(class="pull-left")
                    a(href="/", id="jumbotron")
                        span(class="glyphicon glyphicon-home")
                h1 THE WALL
                block HEADER_P
                    p 

            
            block MAIN_CONTENT


            footer#page-footer
                small Copyright  &copy;  2016 George G. Gkasdrogkas

        block LOAD_JS