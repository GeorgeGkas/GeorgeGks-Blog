mixin quote-card(post)
    .card.quote-card
        h4.post-title #{post.post_title}
        blockquote
            p !{post.post_content}
        - var post_href = String(post.post_title).split(' ').join('-');
        a(href="/post/" + post_href)

            -   var with_pencil = ''
            if post.post_has_article == 1
                -   with_pencil = '-with-pencil'

            div(class="quote-footer"+with_pencil)
                p.posted-date
                    time(datetime=post.post_datetime_tag) #{post.post_date}
                p.quote-card-stats
                    span.block 
                        span(class="glyphicon glyphicon-heart")
                        span(class="heart-counter") #{post.post_like_count}
                    span.block
                        span(class="glyphicon glyphicon-comment")
                        span(class="comments-counter") #{post.post_comment_count}
                    if post.post_has_article
                        span.block
                            span(class="glyphicon glyphicon-pencil")
