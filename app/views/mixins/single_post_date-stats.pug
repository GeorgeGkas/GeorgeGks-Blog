mixin single_post_date-stats(post)
    p.posted-date 
        time(datetime=post.post_datetime_tag) #{post.post_date}
    p.single-card-stats
        span(class="block", id='heart-counter')
            span(class="glyphicon glyphicon-heart")
            span #{post.post_like_count}
        span(class="block", id='comments-counter')
            span(class="glyphicon glyphicon-comment")
            span #{post.post_comment_count}
        if post.post_has_article
            span.block
                span(class="glyphicon glyphicon-pencil")
